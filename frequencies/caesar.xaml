<Page x:Class="frequencies.caesar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:frequencies"
      xmlns:usercontrols="clr-namespace:frequencies.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="generic">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Rectangle  Fill="#363454" Grid.RowSpan="3"/>
        <usercontrols:MenuBar x:Name="MenuBar" Grid.Row="0"/>
        <Grid Grid.Row="1" Background="transparent" Margin="5">
            <TextBox TabIndex="1" x:Name="txtInput" Text="{Binding CipherText}" Foreground="AntiqueWhite" BorderBrush="AliceBlue" FontSize="16" FontWeight="Light" Background="Transparent" TextChanged="txtInput_TextChanged" TextWrapping="Wrap"/>
            <TextBlock x:Name="tbPlaceHolder" Panel.ZIndex="-1" Text="{Binding PlaceHolder}" FontSize="16" FontWeight="Light" Foreground="DarkGray" Margin="5,0,0,0"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Style="{DynamicResource ButtonStyle}" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="btnEnter_Click">
                    <Viewbox>
                        <TextBlock Text="solve"/>
                    </Viewbox>
                </Button>
            </Grid>

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.8*"/>
                </Grid.RowDefinitions>

                <Border Margin="5" Grid.Row="0" BorderThickness="1" BorderBrush="AliceBlue">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.065*"/>
                            <ColumnDefinition Width="0.935*"/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0" HorizontalAlignment="Left">
                            <TextBlock Margin="5" Foreground="#FFC745" FontSize="16" Text="Key:"/>
                        </Viewbox>
                        
                        <Viewbox Grid.Column="1" HorizontalAlignment="Left">
                            <TextBlock Margin="5" Name="KeyOutput" Foreground="#FFC745" FontSize="16" Text="{Binding KeyText}"/>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border Name="SolutionBorder" Margin="5" Grid.Row="1" BorderThickness="1" BorderBrush="AliceBlue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height ="0.3*" MaxHeight="75"/>
                            <RowDefinition Height ="0.7*"/>
                        </Grid.RowDefinitions>

                        <Viewbox Grid.Row="0" Margin="5" StretchDirection="DownOnly" HorizontalAlignment="Left">
                            <TextBlock Name="Solution" Foreground="#FFC745" FontSize="64" Text="Solution: "/>
                        </Viewbox>
                        <Viewbox Grid.Row="1" Margin="5">
                            <Grid Name="SolutionTextGrid" Width="1920">
                                <TextBlock Name="SolutionOutput" Foreground="#FFC745" FontSize="24" Text="{Binding SolutionText}" TextWrapping="Wrap"/>
                            </Grid>
                        </Viewbox>
                    </Grid>
                        
                </Border>

            </Grid>

        </Grid>

    </Grid>
</Page>
