<UserControl x:Class="frequencies.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:frequencies.View.UserControls"
             mc:Ignorable="d" 
             Height="40" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Style="{DynamicResource ButtonStyle}" BorderThickness="0" Background="Transparent" Click="Button_Click">
            <Image Source="pack://application:,,,/Images/houseb.png"/>
        </Button>
        <TextBlock Grid.Column="1" Margin="0,0,40,0" Foreground="#FFC745" FontSize="28" Text="{Binding CurrentTool}" TextAlignment="Center"/>
    </Grid>
</UserControl>
